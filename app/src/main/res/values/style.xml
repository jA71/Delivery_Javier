<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tittle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">"@font/glegoo_bold"</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="letters">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">"@font/glegoo_regular"</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginRight">@dimen/border_left_right</item>
        <item name="android:layout_marginLeft">@dimen/border_left_right</item>
    </style>

    <style name="fields">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="btn_exit">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">"@font/glegoo_bold"</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/btn_exit_left</item>
        <item name="android:layout_marginRight">@dimen/btn_exit_r</item>
    </style>

    <style name="btn_accept">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">"@font/glegoo_bold"</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/btn_accept_l</item>
        <item name="android:layout_marginRight">@dimen/btn_accept_r</item>
    </style>


</resources>