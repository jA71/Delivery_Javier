<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_user_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user"
        android:layout_marginTop="@dimen/top_order"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/border_left_right"
        android:layout_marginRight="@dimen/border_left_right"
        android:textColor="@color/black"
        android:textSize="@dimen/text_height"
        android:fontFamily="@font/glegoo_regular"
        />


    <TextView
        android:id="@+id/text_user_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:layout_marginTop="@dimen/top_order_ps"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/border_left_right"
        android:layout_marginRight="@dimen/border_left_right"
        android:textColor="@color/black"
        android:textSize="@dimen/text_height"
        android:fontFamily="@font/glegoo_regular"
        />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/user"
        app:layout_constraintLeft_toLeftOf="@id/text_user_label"
        app:layout_constraintRight_toRightOf="@id/text_user_label"
        app:layout_constraintTop_toBottomOf="@id/text_user_label"
        android:layout_marginLeft="@dimen/border_left_right"
        android:layout_marginRight="@dimen/border_left_right"
        android:layout_marginTop="@dimen/text_height"
         />

    <EditText
        android:id="@+id/editTextNumberPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberPassword"
        android:hint="@string/password"
        app:layout_constraintLeft_toLeftOf="@id/text_user_password"
        app:layout_constraintRight_toRightOf="@id/text_user_password"
        app:layout_constraintTop_toBottomOf="@id/text_user_password"
        android:layout_marginLeft="@dimen/border_left_right"
        android:layout_marginRight="@dimen/border_left_right"
        android:layout_marginTop="@dimen/text_height" />


    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/border_left_right_bt"
        android:layout_marginRight="@dimen/border_left_right_bt"
        android:text="@string/login"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="408dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/glegoo_bold"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
